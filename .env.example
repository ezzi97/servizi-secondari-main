# Supabase Configuration
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# App Configuration
NODE_ENV=development

# Cron (Vercel Cron Jobs)
CRON_SECRET=your-cron-secret-here

# Brevo (email campaigns and transactional)
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=support@prontoservizi.app
BREVO_SENDER_NAME=Pronto Servizi
BREVO_LIST_IDS=2,5

# Marketing preview (receives draft + confirm link)
MARKETING_PREVIEW_EMAIL=support@prontoservizi.app

# AI (for generating marketing email content; free tier e.g. Google Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key

# Optional: base URL for confirm link in preview email (defaults to VERCEL_URL)
MARKETING_APP_BASE_URL=https://www.prontoservizi.app
